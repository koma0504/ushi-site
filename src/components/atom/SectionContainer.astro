const { class: className } = Astro.props;
---

<section class:list={["section", className]}>
  <slot />
</section>

<style lang="scss">
  .section {
    width: min(100% - 8rem, 1120px);
    padding: 24px 0;
    margin-inline: auto;
    & + .section {
      margin-top: 120px;
    }
  }
</style>
