---
interface menu {
  path: string;
  label: string;
}

const menuLink: menu[] = [
  {
    path: "/",
    label: "トップ",
  },
  {
    path: "/course",
    label: "コース一覧",
  },
  {
    path: "/service",
    label: "指導/実績",
  },
  {
    path: "/profile",
    label: "プロフィール",
  },
  {
    path: "/contact",
    label: "お問い合わせ",
  },
];
---

<footer class="footer">
  <div class="footer_inner">
    <p class="footer_title">
      <img src="/images/logo_white.svg" alt="" />
    </p>
    <ul class="footer_menu">
      {
        menuLink.map((link: menu) => {
          return (
            <li>
              <a href={link.path}>{link.label}</a>
            </li>
          );
        })
      }
    </ul>
    <small class="footer_copyright">
      ©2022 USHI Juku. All rights reserved.
    </small>
  </div>
</footer>

<style lang="scss">
  .footer {
    background-color: #222;
    margin-top: 80px;
  }
  .footer_inner {
    width: min(100% - 8rem, 1120px);
    padding: 80px 20px 30px;
    margin-inline: auto;
    align-items: center;
  }
  .footer_title {
    width: 100%;
    max-width: 205px;
    margin: 0 auto;
    display: block;
  }
  .footer_menu {
    display: flex;
    align-items: center;
    gap: 80px;
    padding: 50px 0 60px;
    width: fit-content;
    margin-inline: auto;
    a {
      color: #f6f5f0;
      font-size: 1.6rem;
      letter-spacing: 0.1em;
      line-height: 1;
      font-weight: 500;
    }
  }
  .footer_copyright {
    color: #f6f5f0;
    font-size: 1.4rem;
    font-weight: 400;
    line-height: 1;
    letter-spacing: 0.2em;
    display: block;
    text-align: center;
  }
</style>
